########################################
# Database
########################################
DB_HOST=db
DB_PORT=5432
DB_USER=user_test
DB_PASS=user_pass
DB_NAME=user_db

########################################
# Security & Auth
########################################
# Fernet key for encrypting Spotify tokens (generate via):
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=tH5S3O7B3Z6YQqUo9k3mW3o2UeY6c3k8oJkJmP3mPdg=

JWT_SECRET=some_jwt_secret
JWT_ALGO=HS256
BASE_URL=http://127.0.0.1:8000

# Access/Refresh token lifetimes
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

########################################
# Spotify OAuth & API
########################################
SPOTIFY_CLIENT_ID=spotify_client_id
SPOTIFY_CLIENT_SECRET=spotify_client_secret
SPOTIFY_AUTH_URL=https://accounts.spotify.com/authorize
SPOTIFY_TOKEN_URL=https://accounts.spotify.com/api/token
SPOTIFY_API_URL=https://api.spotify.com/v1
# Space-separated scopes (as required by Spotify)
SPOTIFY_SCOPES="user-read-email user-read-private playlist-modify-public playlist-modify-private"

########################################
# CORS
########################################
# Comma-separated list or JSON-style list of allowed origins
# Example for local frontend:
CORS_ALLOW_ORIGINS=["http://localhost:3000"]

########################################
# Logging
########################################
LOG_LEVEL=INFO
LOG_RENDERER=console

########################################
# Redis (Taskiq)
########################################
REDIS_HOST=redis
REDIS_PORT=6379

########################################
# Cookies
########################################
SECURE_COOKIES=true

########################################
# Spotify Client retry/backoff
########################################
SPOTIFY_MAX_RETRIES=3
SPOTIFY_RETRY_BASE_DELAY_S=1.0
SPOTIFY_429_MAX_SLEEP_S=60.0

########################################
# Spotify Enrichment Task
########################################
SPOTIFY_SEARCH_BATCH_SIZE=50
SPOTIFY_API_ERROR_SLEEP_S=5
